{
  "name": "edgar-api",
  "version": "1.0.0",
  "description": "An API that interfaces with the SEC's EDGAR lookup tool",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:umd": "tsc -p config/tsconfig.umd.json",
    "clean": "node tools/cleanup.js",
    "test": "jest",
    "test:github": "export USER_AGENT=$INPUT_USER_AGENT && npm run test"
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^2.0.1",
    "@aws-sdk/credential-provider-node": "^3.76.0",
    "@aws-sdk/protocol-http": "^3.58.0",
    "@aws-sdk/signature-v4": "^3.58.0",
    "@types/xmldom": "^0.1.31",
    "node-fetch": "^2.6.1",
    "xmldom": "^0.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscjac/EDGAR-API.git"
  },
  "author": "Oscar Rangel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oscjac/EDGAR-API/issues"
  },
  "homepage": "https://github.com/oscjac/EDGAR-API#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.6.2",
    "@types/node-fetch": "^2.6.4",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1"
  },
  "include": [
    "src/**/*"
  ]
}
